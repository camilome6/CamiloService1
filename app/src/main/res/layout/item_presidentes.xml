<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="15dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">


    <AbsoluteLayout
        android:id="@+id/Em"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        android:background="@android:color/holo_blue_dark"
        android:backgroundTint="?android:attr/colorActivatedHighlight"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="15dp"
            android:layout_y="23dp"
            android:text="Representante:"
            android:textColor="@android:color/background_dark"
            android:textColorHighlight="@android:color/background_dark"
            android:textColorHint="@android:color/background_dark" />

        <TextView
            android:id="@+id/mun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="54dp"
            android:text="Municipio:"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/dep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="15dp"
            android:layout_y="85dp"
            android:text="Departamento:"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/Ba"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_x="15dp"
            android:layout_y="118dp"
            android:text="Barrio:"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/idmunicipio"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_x="88dp"
            android:layout_y="56dp"
            android:text="DatosColombia"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/iddepartamento"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_x="113dp"
            android:layout_y="87dp"
            android:text="DatosColombia"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/idveredabarrio"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_x="87dp"
            android:layout_y="120dp"
            android:text="DatosColombia"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/idnombre"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_x="133dp"
            android:layout_y="25dp"
            android:text="DatosColombia"
            android:textAppearance="@style/TextAppearance.AppCompat" />


    </AbsoluteLayout>

</android.support.v7.widget.CardView>